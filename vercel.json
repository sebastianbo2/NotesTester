{
  "builds": [
    {
      "src": "./frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "./frontend/dist"
      }
    },
    {
      "src": "./backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "./backend/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "./frontend/dist/index.html"
    }
  ]
}
